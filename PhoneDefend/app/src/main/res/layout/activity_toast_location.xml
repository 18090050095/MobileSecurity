<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_trashalf"
    tools:context="com.coderjj.phonedefend.activity.ToastLocationActivity">

    <ImageView
        android:id="@+id/iv_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toast_style_green" />

    <Button
        android:id="@+id/bt_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toast_style_blue"
        android:gravity="center"
        android:text="按中提示框拖拽到任意位置"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bt_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/toast_style_blue"
        android:gravity="center"
        android:text="按中提示框拖拽到任意位置"
        android:visibility="visible" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        style="@style/titleStyle"
        android:text="设置中心"/>

    <com.coderjj.phonedefend.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.coderjj.phonedefend"
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle="自动更新设置"
        mobilesafe:desoff="自动更新已关闭"
        mobilesafe:deson="自动更新已开启"/>

    <com.coderjj.phonedefend.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.coderjj.phonedefend"
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle="电话归属地显示设置"
        mobilesafe:desoff="电话归属地显示已关闭"
        mobilesafe:deson="电话归属地显示已开启"/>

    <com.coderjj.phonedefend.view.SettingClickView
        android:id="@+id/scv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.coderjj.phonedefend.view.SettingClickView
        android:id="@+id/scv_toast_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.coderjj.phonedefend.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.coderjj.phonedefend"
        android:id="@+id/siv_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle="黑名单拦截设置"
        mobilesafe:desoff="黑名单拦截已关闭"
        mobilesafe:deson="黑名单拦截已开启"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.coderjj.phonedefend.activity.AtoolActivity">

    <TextView
        style="@style/titleStyle"
        android:text="高级工具" />

    <TextView
        android:id="@+id/query_phone_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_star"
        android:drawableLeft="@android:drawable/star_off"
        android:gravity="center"
        android:text="归属地查询"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sms_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_star"
        android:drawableLeft="@android:drawable/star_off"
        android:gravity="center"
        android:text="短信备份"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_commonnumber_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_star"
        android:drawableLeft="@android:drawable/star_off"
        android:gravity="center"
        android:text="常用号码查询"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_star"
        android:drawableLeft="@android:drawable/star_off"
        android:gravity="center"
        android:text="归属地查询"
        android:textSize="18sp" />

</LinearLayout>
